mixin button(url, name)
    .item-control
        a.btn.item-buy.mr-3(href= url)= name
        a.btn.item-more.rounded-circle.mr-3(href="#") 
            i.fas.fa-search
        a.btn.item-more.rounded-circle.mr-3(href="#") 
            i.fas.fa-heart
mixin btnControl(name)
    .col-12.d-flex.justify-content-end.align-items-center
        a(href="#").btn-control= name
