section.list-product
    .container
        .row
            .col-12
                .list-product__title
                    span.title-pre 
                        a(href="index.html") Home / 
                    span.title-current
                        a(href="#")= titlePages
        .row
            .col-12.col-md-4.col-lg-3
                .list-product__sidebar.mt-4
                    .row
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= titleCategory
                                +productCategory(listCategory)
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= titlePrice
                                +productCategory(listPrice)
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= titleColor
                                +color(listColor)
