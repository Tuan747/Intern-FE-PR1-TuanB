section.list-product
    .container
        .row
            .col-12
                +pageChange(titleNews, "newsPage.html")
        .row
            .col-12.col-md-4.col-lg-3
                .list-product__sidebar.mt-4
                    .row
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= titleCategory
                                +productCategory(listCategory)
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= titleHighlightNews
                                +newsCategory(dataHighlightNews)
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= blogTag
                                +blogTag(tagNews)
